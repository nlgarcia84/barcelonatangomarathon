---
import Card from '../components/Card.astro';
import MainLayout from '../layouts/MainLayout.astro';

const cards = [
  {
    image: '/images/omellasimoneto.webp',
    title: 'Card 1',
    description: 'Esta es la primera card.',
  },
  {
    image: '/images/lauralaru.webp',
    title: 'Card 2',
    description: 'Esta es la segunda card.',
  },
  {
    image: '/images/olgalacachila.webp',
    title: 'Card 3',
    description: 'Esta es la segunda card.',
  },
];
---

<MainLayout title="Home Page">
  <main class="p-6">
    <h1 class="text-4xl md:text-5xl lg:text-6xl text-amber-300 mb-8">
      Barcelona Tango Marathon
    </h1>
    <h2 class="text-xl md:text-3xl lg:text-4xl mb-7">
      5th Edition - 2 to 6 April
    </h2>
  </main>
  <h3 class="mb-2 text-2xl font-bold">Count Down</h3>

  <!-- Cuanta atras -->
  <p id="demo" class="text-2xl md:text-5xl mb-10"></p>

  <script>
    const TARGET_DATE = new Date('Apr 6, 2026 15:37:25').getTime();
    const OUTPUT_ID = 'demo';

    const output = document.getElementById(OUTPUT_ID);

    if (!output) {
      console.warn(`Element #${OUTPUT_ID} not found`);
    } else {
      const updateCountdown = () => {
        const now = Date.now();
        const distance = TARGET_DATE - now;

        if (distance <= 0) {
          output.textContent = 'EXPIRED';
          clearInterval(timer);
          return;
        }

        const time = {
          days: Math.floor(distance / (1000 * 60 * 60 * 24)),
          hours: Math.floor((distance / (1000 * 60 * 60)) % 24),
          minutes: Math.floor((distance / (1000 * 60)) % 60),
          seconds: Math.floor((distance / 1000) % 60),
        };

        output.textContent = `${time.days}d ${time.hours}h ${time.minutes}m ${time.seconds}s`;
      };

      updateCountdown(); // render inicial
      const timer = setInterval(updateCountdown, 1000);
    }
  </script>

  <h2 class="text-xl text-amber-300 mb-2 font-bold">
    SPINING YOUR TANGO DREAMS
  </h2>
  <h3 class="mb-10">Scroll Right or Left to see all the DJs</h3>

  <div class="relative max-w-6xl mx-auto">
    <!-- Botón anterior -->
    <button
      id="prev"
      class="absolute left-0 top-1/2 -translate-y-1/2 z-10 shadow rounded-full w-10 h-10 flex items-center justify-center"
    >
      ←
    </button>

    <!-- Ventana del slider -->
    <div class="overflow-hidden">
      <div id="track" class="flex transition-transform duration-300 ease-out">
        {
          cards.map((card) => (
            <div class="min-w-full sm:min-w-1/2 lg:min-w-1/3 p-4">
              <Card {...card} />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Botón siguiente -->
    <button
      id="next"
      class="absolute right-0 top-1/2 -translate-y-1/2 z-10 shadow rounded-full w-10 h-10 flex items-center justify-center"
    >
      →
    </button>
  </div>

  <script>
    const track = document.getElementById('track') as HTMLElement;
    const prev = document.getElementById('prev') as HTMLElement;
    const next = document.getElementById('next') as HTMLElement;

    if (track && prev && next) {
      let index = 0;
      const total = track.children.length;

      const update = () => {
        const firstChild = track.children[0] as HTMLElement;
        const width = firstChild.offsetWidth;
        track.style.transform = `translateX(-${index * width}px)`;
      };

      next.addEventListener('click', () => {
        if (index < total - 1) index++;
        update();
      });

      prev.addEventListener('click', () => {
        if (index > 0) index--;
        update();
      });

      window.addEventListener('resize', update);
    }
  </script>
</MainLayout>
